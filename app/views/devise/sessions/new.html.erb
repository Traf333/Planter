<h2>Вход</h2>

<%= form_for(resource, :as => resource_name,
             :url => session_path(resource_name),
             :html => {:class => "form-horizontal"}) do |f| %>


    <fieldset>

      <legend></legend>

      <div class="control-group">
        <label class="control-label"><%= f.label :email %></label>

        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= f.label :password %></label>

        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <% if devise_mapping.rememberable? -%>
            <label class="control-label"><%= f.label :remember_me %></label>

            <div class="controls">
              <%= f.check_box :remember_me %>
            </div>
        <% end -%>
      </div>

    </fieldset>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Вход", :class => 'btn btn-primary' %>
      </div>
    </div>


<% end %>

<%= render "devise/shared/links" %>