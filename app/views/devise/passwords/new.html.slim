h2 Забыли пароль?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => "form-horizontal"}) do |f|
  = devise_error_messages!
  fieldset
    legend
    .control-group
      label.control-label= f.label :email
      .controls
        = f.email_field :email
  .control-group
    .controls
      = f.submit "Отправить инструкцию", :class => 'btn btn-primary'
= render "devise/shared/links"