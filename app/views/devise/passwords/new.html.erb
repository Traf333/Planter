<h2>Забыли пароль?</h2>

<%= form_for(resource, :as => resource_name,
             :url => password_path(resource_name),
             :html => {:method => :post, :class => "form-horizontal"}) do |f| %>

    <%= devise_error_messages! %>

    <fieldset>

      <legend></legend>

      <div class="control-group">
        <label class="control-label"><%= f.label :email %></label>

        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>
    </fieldset>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Отправить инструкцию", :class => 'btn btn-primary' %>
      </div>
    </div>

<% end %>

<%= render "devise/shared/links" %>
