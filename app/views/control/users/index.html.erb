<h1>Пользователи</h1>

<div class="table-control">
    <%= link_to 'Добавить пользователя', new_control_user_path, :class => 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <tr>
    <th><%= sortable :id, '#' %></th>
    <th><%= sortable :last_name, 'Ф. И. О.' %></th>
    <th><%= sortable :phone, 'Телефон' %></th>
    <th><%= sortable :email, 'E-mail' %></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><strong><%= user.id %></strong></td>
    <td><%= user.full_name %></td>
    <td><%= user.phone %></td>
    <td>
      <%= link_to user.email, "mailto:#{user.email}" %>
    </td>
    <td style="text-align: right">
      <%= link_to 'Изменить', edit_control_user_path(user), :class => 'btn btn-small' %>
      <%= link_to 'Удалить', control_user_path(user), method: :delete, data: { confirm: 'Вы уверены?' },
                  :class => 'btn btn-danger btn-small' %>
    </td>
  </tr>
<% end %>
</table>

<%= will_paginate @users, :renderer => BootstrapPagination::Rails %>