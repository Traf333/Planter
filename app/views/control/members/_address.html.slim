.address
  .address-title
    a#title href="javascript:" onclick="AddressDialog.show($(this).parents('.address').first())"
      = f.object.address
    = f.link_to_remove 'Удалить', :class => 'btn btn-danger btn-small pull-right'
  #address-info.address.modal.hide.fade
    .modal-body
      fieldset
        #map style="height: 200px; margin-bottom: 20px; border:  solid 1px #CCCCCC;"
          #map_canvas style="width: 100; height: 100;"
          = f.hidden_field :latitude, :class => 'address-latitude'
          = f.hidden_field :longitude, :class => 'address-longitude'
        .control-group
          label.control-label= f.label :member_address_type_id
          .controls
            = f.select :member_address_type_id, options_from_collection_for_select(MemberAddressType.all, 'id', 'name', f.object.member_address_type_id)
        .control-group
          label.control-label= f.label :address
          .controls
            = f.text_field :address, :placeholder => 'Россия, Москва', :class => 'address-input'
        .control-group
          label.control-label= f.label :note
          .controls
            = f.text_area :note, :rows => 5
        .control-group
          label.control-label= f.label :contacts
          .controls
            = f.text_field :contacts
        .control-group
          label.control-label= f.label :description
          .controls
            = f.text_area :description, :rows => 5
    .modal-footer
      a#save-btn.btn.btn-primary Сохранить
      a#cancel-btn.btn Отмена