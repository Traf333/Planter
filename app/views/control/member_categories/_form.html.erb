<%= form_for([:control, @member_category], :html => {:class => "form-horizontal"}) do |f| %>

    <% if @member_category.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <ul>
            <% @member_category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset>

      <legend></legend>

      <div class="control-group">
        <label class="control-label"><%= f.label :name %></label>

        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= f.label :description %></label>

        <div class="controls">
          <%= f.text_field :description %>
        </div>
      </div>

    </fieldset>

    <div class="form-actions">
      <%= f.submit 'Сохранить', :class => 'btn btn-primary' %>
      <%= link_to 'Отмена', control_member_categories_path, :class => 'btn' %>
    </div>

<% end %>
