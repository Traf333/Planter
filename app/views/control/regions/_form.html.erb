<%= form_for([:control, @region], :html => {:class => "form-horizontal"}) do |f| %>

    <% if @region.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <ul>
            <% @region.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p id="notice"><%= notice %></p>

    <fieldset>

      <legend>Данные по региону</legend>

      <div class="control-group">
        <label class="control-label"><%= f.label :country %></label>

        <div class="controls">
          <%= f.select :country_id, options_from_collection_for_select(Country.all, :id, :name, @region.country_id) %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= f.label :name %></label>

        <div class="controls">
          <%= f.text_field :name, :placeholder => 'Московская область' %>
        </div>
      </div>

    </fieldset>

    <div class="form-actions">
      <%= f.submit 'Сохранить', :class => 'btn btn-primary' %>
      <%= link_to 'Отмена', control_regions_path, :class => 'btn' %>
    </div>

<% end %>
